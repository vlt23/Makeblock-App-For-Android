<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/corners_round"
    android:layout_width="230dp"
    android:layout_height="84dp" >

    <TextView
        android:id="@+id/textPort"
        android:layout_width="50dp"
        android:layout_height="84dp"
        android:text="3"
        android:gravity="center" 
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" 
            android:background="#ffa8abad">
        </LinearLayout>
		<FrameLayout 
		    android:layout_width="80dp"
            android:layout_height="match_parent">
            <ImageView
            android:id="@+id/rgbMask"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center" 
            android:scaleType="centerInside"
            android:layout_marginLeft="5dp"
            android:src="@drawable/rgbled_mask" />  
		   <ImageView
            android:id="@+id/imageDevice"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center" 
            android:scaleType="centerInside"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ultrasonic" /> 
           
		    
		</FrameLayout>
        
        <ImageView 
            android:id="@+id/rgbColorPick"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center" 
            android:layout_gravity="center"
            android:src="@drawable/colorpicker" />
    </LinearLayout>

</LinearLayout>
